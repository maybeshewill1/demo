//顶部导航条效果
 $("li.step").mouseenter(function(){
 $("div.head-sidebar").stop(true).animate({
 width: 104+this.offsetLeft
   }, 250 );
 });
$(".step").mouseleave(function(){
    $("div.head-sidebar").stop(true).animate({
        width: 313
    }, 500 );
});
